<view class="i-class i-badge">
    <slot></slot>
    <view class="i-badge-dot" wx:if="{{ dot }}"></view>
    <view class="i-badge-count i-class-alone" wx:elif="{{ count !== 0 }}" style="{{ 'top:' + top + 'px;' }} {{ 'right:' + right + 'px;' }}">{{ finalCount }}</view>
    <view class="i-badge-count i-class-alone" wx:elif="{{ text !== '' }}" style="{{ 'top:' + top + 'px;' }} {{ 'right:' + right + 'px;' }} {{ 'background:' + bg }}">{{ text }}</view>
</view>
