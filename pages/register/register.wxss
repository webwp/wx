/* wxPile/pages\register/register.wxss */
.info {
    margin-top: 1rem;
  }
  .info image {
    display: block;
    width: 5rem;
    height: 5rem;
    margin: 3rem auto 1rem;
  }
  .info .info-text {
    text-align: center;
    font-size: .7rem;
    color: #999;
  }

  .tab-content {
    position: relative;
    margin-bottom: .6rem;
    font-size: .8rem;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    border-bottom: 1px solid #efefef;
    
  }

  .tab-content .tab-item {
    flex: 1;
    text-align: center;
    color: #666;
    line-height: 1.7rem;
  }
  .tab-content .tab-item-active {
    color: #333;
  }
  i {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    border-bottom: 2px solid #ec6c00;
    width: 2.9rem;
    transition: all .3s;
  }

  .form-cotent {
    position: relative;
    width: 76vw;
    height: 26vh;
    overflow: hidden;
    
  }
  .form-cotent .wrap {
    width:152vw;
    transition: all .3s;
  }
  .form-item {
    width: 76vw;
    float: left;
  }

  .login-tip {
    margin-top: .2rem;
    color: #333;
    text-align: center;
    font-size: .28rem;
  }
  #form {
    position: relative;
    margin: 10vh 12vw 0;
 }
 .form {
    overflow: hidden;
}
 #form .input-area>input {
    display: block;
    width: 30vw;
    padding-left: .88rem;
    font-size: .8rem;
    color: #333;
    border: 0;
    outline: 0;
}
 #form .icon {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    margin: 0;
    width: .44rem;
    height: .44rem;
    background-size: .44rem .44rem;
    background-repeat: no-repeat;
    background-position: 50%;
}
#form .input-area {
    position: relative;
    border-bottom: 1px solid #efefef;
    padding-bottom: .2rem;
    margin-bottom: .4rem;
    width:76vw
}
