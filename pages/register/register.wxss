.form-item-list { font-size: 32rpx; border-bottom: 1px solid #efefef;  padding: 20rpx 0; overflow: hidden;}
.form-item-list .form-item-side { float: left;}
.form-item-list input { width: 30vw;}

.codes {
    position: relative;
    padding:  0 20rpx;
    color: #ec6c00
}
.codes:after {
    content: "";
    position: absolute;
    left: 0;
    top: .2rem;
    bottom: 0;
    margin: 0;
    height: .8rem;
    border-left: 1px solid #dedede;
}
