.codes {
    position: relative;
    padding:  0 20rpx;
    color: #ec6c00;
    font-size: 28rpx;
    min-width: 60rpx;
}
.codes:after {
    content: "";
    position: absolute;
    left: 0;
    top: .2rem;
    bottom: 0;
    margin: 0;
    height: .8rem;
    border-left: 1px solid #dedede;
}
.btn-orange {
    border-radius: .1rem;
