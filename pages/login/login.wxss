  .info {
    margin-top: 1rem;
  }
  .info image {
    display: block;
    width: 5rem;
    height: 5rem;
    margin: 3rem auto 1rem;
  }
  .info .info-text {
    text-align: center;
    font-size: .7rem;
    color: #999;
  }

  .tab-content {
    position: relative;
    margin-bottom: .6rem;
    font-size: 32rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    border-bottom: 1px solid #efefef;
    
  }

  .tab-content .tab-item {
    flex: 1;
    text-align: center;
    color: #666;
    line-height: 1.7rem;
  }
  .tab-content .tab-item-active {
    color: #333;
  }
  i {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    border-bottom: 2px solid #ec6c00;
    width: 2.9rem;
    transition: all .3s;
  }

  .form-cotent {
    position: relative;
    width: 70vw;
    height: 20vh;
    overflow: hidden;
    
  }
  .form-cotent .wrap {
    width:140vw;
    transition: all .3s;
  }
  .form-item {
    width: 70vw;
    float: left;
  }

  .login-tip {
    margin-top: .2rem;
    color: #333;
    text-align: center;
    font-size: .28rem;
  }
  #form {
    position: relative;
    /* margin: 10vh 15vw 0; */
    margin: 100rpx 100rpx 0;
 }
