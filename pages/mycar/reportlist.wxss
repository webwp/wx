.list {
    margin: .5rem .5rem 0;
}
.list .item {
    background-color: #fff;
    border-radius: .5rem;
    margin-bottom: .5rem;
    -webkit-box-shadow: 0 2px 10px rgba(0,0,0,.14);
    box-shadow: 0 2px 10px rgba(0,0,0,.14);
}
.list .cardInfo {
    position: relative;
    padding-bottom: .12rem;
    border-bottom: 1px solid #f5f6f7;
}
.list .cardInfo .car-logo {
    position: absolute;
    top: .82rem;
    left: .4rem;
    width: 3.2rem;
    height: 3.2rem;
    border-radius: .2rem;
}
.list .cardInfo>.car-number {
    font-size: 1rem;
    padding: .86rem 0 .22rem 4rem;
    color: #333;
    font-weight: 400;
}
.list .cardInfo>.car-series {
    font-size: .8rem;
    padding: 0 .2rem .54rem 4rem;
    color: #666;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.list .item .button {
    position: relative;
    width: 50%;
    height: 2.5rem;
    float: left;
    text-align: center;
    line-height: 2.5rem;
    font-size: .9rem;
    color: #999;
    vertical-align: middle;
}
.list .item .report:after {
    position: absolute;
    content: "";
    top: 0;
    right: 0;
    height: 100%;
    border-right: 1px solid #f5f6f7;
}
.list .addCar {
